<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Update a Recipe</title>
</head>

<body>
    <div class="nav-bar">
        <%- include('../partials/_navbar.ejs') %>
            <a class="nav-link" href="/">Back Home
            </a>
            <a class="nav-link" href="/recipes">View Recipes</a>
    </div>
    <div class="recipe-intro">
        <h1>Update a Recipe</h1>
        <!-- Link to redirect user back to index page -->


    </div>
    <div class="recipe-details">
        <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" class="text-box" value="<%=recipe.name%>" />
            <div class="instruction-box">
                <label for="instructions">Instructions:</label>
                <textarea type="text" id="instructions" name="instructions"> <%=recipe.instructions%></textarea>
            </div>

            <!-- <form id="input-form"> -->
            <div class="ingredient-list">
                <h3>Add Ingredients</h3>
                <%ingredients.forEach(ingredient=>{%>


                    <li>
                        <input type="checkbox" name="ingredient-<%=ingredient._id%>">
                        <label for="ingredient-<%=ingredient._id%>">
                            <%=ingredient.name%>
                        </label>
                    </li>
                    <% }) %>
            </div>




            <button type="submit" class="submit">Update</button>
        </form>
    </div>
</body>