<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Recipes</title>
</head>

<body>
    <div class="nav-bar">
        <%- include('../partials/_navbar.ejs') %>
            <a class="nav-link" href="/">Back Home
            </a>
            <a class="nav-link" href="/recipes/new">Create Recipe</a>
    </div>
    <h1>Welcome to My Recipes</h1>

    <%if (!recipes.length>0){ %>
        <%="You do not have any recipes yet!" %>
            <% } else { %>

                <div class="recipe-list">

                    <% recipes.forEach(recipes=> { %>
                        <li>
                            <a class="recipe-name" href="/recipes/<%=recipes._id %>">
                                <%=recipes.name%>
                            </a>
                            <%})%>
                        </li>
                        <%}%>

                </div>


</body>

</html>